{
  "name": "FDS Helper",
  "version": "0.0.7",
  "description": "Плагин для упрощения модерирования на сайте http://freedomsex.me/.",
  "short_name": "FDS Helper",
  "current_locale": "ru",
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "favicon-32x32.png",
    "default_title": "FDS Helper"
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "128": "favicon-128x128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "*://freedomsex.me/"
  ],
  "optional_permissions": [
    "tabs",
    "*://*/"
  ],
  "minimum_chrome_version": "28",
  "manifest_version": 2
}
